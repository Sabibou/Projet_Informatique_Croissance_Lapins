CC=gcc
CFLAGS=-c -Wall -Wextra
LDFLAGS=-lm
SOURCES=Lab4.c MERSENNE_TWISTER.c CONFIDENCE_INTERVALS.c
OBJECTS=$(SOURCES:.c=.o)
EXECUTABLE=main
.PHONY : clean
all: $(SOURCES) $(EXECUTABLE)
$(EXECUTABLE): $(OBJECTS)
	$(CC)  $(OBJECTS) -o $@ $(LDFLAGS)
.c.o:
	$(CC) $(CFLAGS) $< -o $@
clean :
	rm -rf $(OBJETS) $(EXECUTABLE)
